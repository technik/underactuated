#pragma once

namespace std {

	typedef unsigned char		uint8_t;
	typedef signed char			int8_t;
	typedef unsigned int		uint16_t;
	typedef signed int			int16_t;
	typedef unsigned long int	uint32_t;
	typedef signed long int		int32_t;
	
}	// namespace std

using std::int8_t;
using std::uint8_t;
using std::int16_t;
using std::uint16_t;
using std::int32_t;
using std::uint32_t;
